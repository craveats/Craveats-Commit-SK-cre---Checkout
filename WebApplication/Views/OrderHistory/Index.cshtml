@model WebApplication.Models.ViewModel.OrderOrderDetailIndexData
@{
    ViewBag.Title = "User Order History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using WebApplication.Common

<h2>Order History</h2>

<table class="table">
    <tr>
        <th>Order Id</th>
        <th>Date Created</th>
        <th>Order Total</th>
        <th>Tax Total</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Orders)
    {
        string selectedRow = "";
        if (item.Id == ViewBag.OrderId)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @CommonUtility.DoFormat(item.OrderTotal)
            </td>
            <td>
                @CommonUtility.DoFormat(item.TaxTotal)
            </td>
            <td>
                [ @Html.ActionLink("Select", "Index", new { id = item.Id }) ]
            </td>
        </tr>
    }
</table>

@if (Model.OrderDetails != null)
{
    <h3>Ordered items for selected order</h3>

    <table class="table">
        <tr>
            <th>Name</th>
            <th>Detail</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Tax</th>
        </tr>

        @foreach (var item in Model.OrderDetails)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Detail
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @CommonUtility.DoFormat(item.UnitPrice)
            </td>
            <td>
                @CommonUtility.DoFormat(item.TaxRate)
            </td>
        </tr>
        }

    </table>
}