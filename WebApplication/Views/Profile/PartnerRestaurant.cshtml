@using WebApplication.Common
@using Generic.Obfuscation.TripleDES
@model WebApplication.Models.PartnerRestaurantViewModel

@{
    ViewBag.Title = "Partner Restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Partner Restaurant</h2>

<div>
    <h4>Your profile</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Role)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactNumber)
        </dd>
        <dt>
            &nbsp;
        </dt>
        <dd>
            <p>@Html.ActionLink("Edit", "EditPartnerProfile", new { id = Model.Id })</p>
        </dd>
    </dl>
</div>
<hr/>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Addresses)
        </dt>
        <dd>
            <div class="row">
                <div class="col-md-6">
                    @if (Model.Addresses.Any())
                    {
                        foreach (var item in Model.Addresses)
                        {
                            <p>
                                <span>@Html.DisplayFor(modelItem => item.Line1)</span>
                                <span>&nbsp;</span>
                                <span>@Html.DisplayFor(modelItem => item.Line2)</span>
                            </p>
                            <p>
                                <span>@Html.DisplayFor(modelItem => item.City)</span>
                            </p>
                            <p>
                                <span>@Html.DisplayFor(modelItem => item.RegionAlias)</span>
                                <span>&nbsp;</span>
                                <span>@Html.DisplayFor(modelItem => item.Postcode)</span>
                            </p>
                            <p>@Html.ActionLink("Edit", "EditAddress", new { id = item.Id })</p>

                        }
                    }
                    else
                    {
                        <p>@Html.ActionLink("Add", "AddAddress", "Profile")</p>
                    }
                </div>
            </div>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "ProfileView")
</p>
